<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForBackground">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@drawable/shape_color_blue"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/horizonal1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_set_as"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <android.support.constraint.Guideline
            android:id="@+id/vertival_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.13" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.87" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bill_my_background"
            android:gravity="top"
            android:stretchColumns="*"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_parent2"
            app:layout_constraintEnd_toStartOf="@+id/vertial_parent2"
            app:layout_constraintStart_toStartOf="@+id/vertial_parent1"
            app:layout_constraintTop_toTopOf="@+id/horizontal_parent1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="86dp">

                <finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CommonlyUsed1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="常用(1)"
                    custom:picture="@mipmap/ic_launcher_round">

                </finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText>

                <finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CommonlyUsed2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="常用(2)"
                    custom:picture="@mipmap/ic_launcher_round">

                </finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText>

                <finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CommonlyUsed3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="常用(3)"
                    custom:picture="@mipmap/ic_launcher_round">

                </finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText>

                <finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CommonlyUsed4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="常用(4)"
                    custom:picture="@mipmap/ic_launcher_round">

                </finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bill_my_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertial_parent2"
            app:layout_constraintStart_toStartOf="@+id/vertial_parent1"
            app:layout_constraintTop_toTopOf="@+id/horizontal_parent2">


            <finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgbtn_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:text="添加列表"
                custom:picture="@mipmap/ic_launcher_round">

            </finalhomework.tcl.com.finalhomework.Utils.ImageButtonWithText>

        </LinearLayout>

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_parent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_parent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/vertial_parent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.052083332" />

        <android.support.constraint.Guideline
            android:id="@+id/vertial_parent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="top">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="133dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_head2"
            app:layout_constraintEnd_toStartOf="@+id/vertical_head2"
            app:layout_constraintStart_toStartOf="@+id/vertical_head1"
            app:layout_constraintTop_toTopOf="@+id/horizontal_head1">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下拉框" />
        </LinearLayout>

        <android.support.constraint.Guideline
            android:id="@+id/vertical_head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.37" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.63" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>